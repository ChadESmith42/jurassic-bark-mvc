@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "User Admin";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary"})
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.UserName)</h4>
                        <p class="card-text">Use the links below to modify this user.</p>
                        <div class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-light card-link" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-light card-link" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-light card-link" })
                    </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





