@model JurassicBark.DATA.EF.Reservation

@{
    ViewBag.Title = "Delete Reservation";
}

<h2>@ViewBag.Title for @Model.Pet.Name on @Model.ReservationDate.ToShortDateString()</h2>

<h3>Are you sure you want to delete this reservation for @Model.Pet.Name?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ReservationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pet.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pet.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResortLocation.ResortName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResortLocation.ResortName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color btn-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary"})
        </div>
    }
</div>
