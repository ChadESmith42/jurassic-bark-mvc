    <span>@Html.DisplayFor(model => model.Address)</span><br />
    <span>@Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.ZipCode)</span>
</div>
<div>
    <p>@Html.DisplayFor(model => model.ResortName) has capacity for <span class="badge badge-primary badge-pill">@Html.DisplayFor(model => model.ReservationLimit)</span> animals per day.</p>
    @*<p>@Html.DisplayFor(model => model.ResortName) has <span class="badge badge-primary badge-pill">@ViewBag.Available</span> available reservations today.</p>*@
</div>

